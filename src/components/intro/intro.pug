mixin intro({ title, subtitleImage, image, smImage, description, markets })
	section.intro
		h1.h2.intro__title=title
		picture.intro__picture
			source(
				type='image/webp'
				media="(max-width: 767px)"
				srcset=`${smImage.webp['1x']}, ${smImage.webp['2x']} 2x`
			)
			source(
				media="(max-width: 767px)"
				srcset=`${smImage.default['1x']}, ${smImage.default['2x']} 2x`
			)
			source(
				type='image/webp'
				srcset=`${image.webp['1x']}, ${image.webp['2x']} 2x`
			)
			img.intro__image(
				src=image.default['1x']
				srcset=`${image.default['1x']}, ${image.default['2x']} 2x`
				alt=image.alt
			)
		picture.intro__subtitle-picture
			source(
				type='image/webp'
				srcset=`${subtitleImage.webp['1x']}, ${subtitleImage.webp['2x']} 2x`
			)
			img.intro__subtitle-image(
				src=subtitleImage.default['1x']
				srcset=`${subtitleImage.default['1x']}, ${subtitleImage.default['2x']} 2x`
				alt=subtitleImage.alt
			)
		p.intro__description=description
		+markets({ items: markets })
		
