mixin faq-detail({ backLink, title, description, image, smImage, content })
	section.faq-detail.page.js-faq-detail
		.faq-detail__header
			.faq-detail__title-wrapper
				+back-link({
					className: 'faq-detail__back-link',
					title: 'Back',
					href: backLink
				})
				h1.h2.faq-detail__title=title
			p.faq-detail__description=description
		.faq-detail__body
			.faq-detail__column
				ul.faq-detail__list.sticky.js-sticky
					each item in content.filter(item => item.type === 'title')
						li.faq-detail__list-item
							+link({
								className: 'faq-detail__button js-faq-detail-button',
								text: item.data,
								mod: 'white-light'
							})
			.faq-detail__column.js-faq-detail-content
				+content({ content })
			.faq-detail__column
				picture.faq-detail__picture.sticky.js-sticky
					source(
						type='image/webp'
						media="(max-width: 767px)"
						srcset=`${smImage.webp['1x']}, ${smImage.webp['2x']} 2x`
					)
					source(
						media="(max-width: 767px)"
						srcset=`${smImage.default['1x']}, ${smImage.default['2x']} 2x`
					)
					source(
						type='image/webp'
						srcset=`${image.webp['1x']}, ${image.webp['2x']} 2x`
					)
					img.faq-detail__image(
						src=image.default['1x']
						srcset=`${image.default['1x']}, ${image.default['2x']} 2x`
						alt=image.alt
					)
