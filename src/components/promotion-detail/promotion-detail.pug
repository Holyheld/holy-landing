mixin promotion-detail({ list, title, time, image, smImage, content })
	section.promotion-detail.page.js-promotion-detail
		.promotion-detail__column
			.promotion-detail__nav-wrapper.js-promotion-detail-nav-wrapper.sticky.js-sticky
				button.promotion-detail__nav-button.js-promotion-detail-nav-button.js-focus-visible(
					type="button"
				)
					span.promotion-detail__nav-button-text=list.find(item => item.current).title
					+icon({
						className: 'promotion-detail__nav-button-arrow',
						id: 'icon-arrow-down',
					})
				nav.promotion-detail__nav
					h2.h3.promotion-detail__nav-title Whatâ€™s going on
					ul.promotion-detail__nav-list
						each item in list
							li.promotion-detail__nav-list-item
								+link({
									className: `promotion-detail__link ${item.current ? 'is-active' : ''}`,
									href: item.current ? null : item.href,
									text: item.title,
									mod: 'white-light'
								})
		.promotion-detail__column.js-promotion-detail-content
			h1.h2.promotion-detail__title=title
			time.promotion-detail__time=time
			+content({ content })
		.promotion-detail__column
			picture.promotion-detail__picture.sticky.js-sticky
				source(
					type='image/webp'
					media="(max-width: 767px)"
					srcset=`${smImage.webp['1x']}, ${smImage.webp['2x']} 2x`
				)
				source(
					media="(max-width: 767px)"
					srcset=`${smImage.default['1x']}, ${smImage.default['2x']} 2x`
				)
				source(
					type='image/webp'
					srcset=`${image.webp['1x']}, ${image.webp['2x']} 2x`
				)
				img.promotion-detail__image(
					src=image.default['1x']
					srcset=`${image.default['1x']}, ${image.default['2x']} 2x`
					alt=image.alt
				)
